
@{
  ViewData["Title"] = "List of Books";
}

<div>
  <h1 class="display-4">@ViewData["Title"]</h1>
  <table class="table table-striped table-bordered">
    @foreach (var item in @ViewBag.Books)
    {
      <tr>
        <td>@item.title</td>
        <td style="text-align: center;">
          <a asp-action="Details"
                    asp-route-title="@item.title"
                    asp-route-smallThumbnail="@item.smallThumbnail"
                    asp-route-authors="@item.authors"
                    asp-route-publishers="@item.publishers"
                    asp-route-publishedDate="@item.publishedDate"
                    asp-route-description="@item.description"
                    asp-route-ISBN_10="@item.ISBN_10"
                    class="btn btn-sm btn-info">Details
            </a>
        </td>
      </tr>
      }
  </table>
</div>
<li class="nav-item">
  <a class="nav-link text-dark" asp-area="" asp-controller="Books" asp-action="Index">Books</a>
</li>
